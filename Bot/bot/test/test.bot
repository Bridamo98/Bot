		writeln a+" es mayor o igual que "+b;
	end;
	let z=0;
	if(pal=="perrito")
	begin
		writeln "la palabra es correcta";
		z=z+1;
	end;
	while(z<=6)
	begin
		let m="variable";
		writeln z+" perritos";
		z=z+1;
		writeln m;
	end;
	writeln z;
end;

